@model SportShop2025.Data.Employee
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-add">
    <h2 class="title">Create Employee</h2>
    <hr />

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert-success SuccessMessage">
            @ViewBag.SuccessMessage
        </div>
    }

    <div class="form-container">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="input-field" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="input-field" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="input-field" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="Position" class="input-field" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="input-field" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <div class="form-group btn-container">
                <input type="submit" value="Create" class="btn-submit" />
            </div>
        </form>
    </div>
</div>

<div class="back-link">
    <a asp-action="ListEmployee">← Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
