@model SportShop2025.Data.Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="product-container">
    <h4 class="product-title">Product Detail</h4>
    <hr />
    <hr />
    @if (ViewBag.MessageDelete != null)
    {
        <div class="alert-success MessageDelete">
            @ViewBag.MessageDelete
        </div>
    }

    @if (ViewBag.MessageDeleteSuccess != null)
    {
        <div class="alert-success MessageDeleteSuccess">
            @ViewBag.MessageDeleteSuccess
        </div>
    }

    @if (ViewBag.MessageNoDelete != null)
    {
        <div class="alert-success MessageNoDelete">
            @ViewBag.MessageNoDelete
        </div>
    }
    <hr />
    <dl class="product-details row">
        <dt class="product-label col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="product-value col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="product-label col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="product-value col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="product-label col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="product-value col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="product-label col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="product-value col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="product-label col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="product-value col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="product-label col-sm-2">
            @Html.DisplayNameFor(model => model.StockQuantity)
        </dt>
        <dd class="product-value col-sm-10">
            @Html.DisplayFor(model => model.StockQuantity)
        </dd>
        <dt class="product-label col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="product-value col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="product-label col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="product-value col-sm-10">
            <img style="100px;" src=" @Html.DisplayFor(model => model.ImageUrl)" />
        </dd>
        <dt class="product-label col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="product-value col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
    </dl>


</div>

<div class="product-actions">
    <form asp-action="ConfirmDeleteProduct">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ListProduct" class="btn btn-back">Back to List</a>
    </form>
</div>
